<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />


    <application
        android:name="app.GateMasterApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme.Base">
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode_ui" />


        <!--<activity
            android:name="com.example.gatemaster.ui.SplashActivity"
            android:exported="true"
           >
        </activity>-->
        <activity
            android:name="com.example.gatemaster.ui.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gatemaster.ui.HomeActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.example.gatemaster.ui.ForgotPasswordActivity"
            android:exported="true">

        </activity>

        <activity
            android:name="com.example.gatemaster.ui.VisitorCheckInActivity"
            android:exported="true">

        </activity>

        <activity
            android:name="com.example.gatemaster.ui.ProfileActivity"
            android:exported="true">

        </activity>


    </application>

</manifest>