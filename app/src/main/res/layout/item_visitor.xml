<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <!-- Visitor Information Header -->
            <TextView
                android:id="@+id/tvVisitorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitor Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="2dp"/>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgrey"/>

            <!-- Visitor Mobile and Vehicle Registration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/tvVisitorMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile: 9012852000"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvVehicleRegistration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicle: UK12U1250"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Visitor Address -->
            <TextView
                android:id="@+id/tvVisitorAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: Amroha"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <!-- Purpose of Visit -->
            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose: Meet Mr Ahuja for order related query"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <!-- Entry Time -->
            <TextView
                android:id="@+id/tvEntryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entry Time: 2024-10-19 18:12:06"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <Button
                android:id="@+id/checkoutbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                style="@style/CustomButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:text="CHECK OUT"
                android:textSize="@dimen/_13sdp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rounded_checkout_bg"
                android:textColor="@android:color/white"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
